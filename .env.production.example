# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# API Configuration
VITE_API_URL=https://api.yourdomain.com
API_SIGNING_SECRET=your-random-signing-secret

# Security
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# External APIs
EPA_API_KEY=your-epa-api-key
EPA_API_URL=https://api.epa.gov/v1

# State Commission APIs
TEXAS_RRC_API_KEY=your-texas-api-key
COLORADO_OGCC_API_KEY=your-colorado-api-key

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your-project-id
BLOCKCHAIN_CHAIN_ID=1
CONTRACT_ADDRESS=0x...
DEPLOYER_PRIVATE_KEY=DO_NOT_COMMIT_THIS

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
DATADOG_API_KEY=your-datadog-api-key

# Email Service
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_AI_ASSISTANT=true
ENABLE_ADVANCED_ANALYTICS=true
MAINTENANCE_MODE=false

# Compliance & Regulatory
REQUIRE_KYC=true
REQUIRE_ACCREDITED_INVESTOR=true
MAX_TRANSACTION_AMOUNT=1000000

# Cache Configuration
REDIS_URL=redis://username:password@localhost:6379/0
CACHE_TTL=3600

# Background Jobs
QUEUE_URL=redis://username:password@localhost:6379/1
JOB_CONCURRENCY=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/app/production.log

# Performance
NODE_ENV=production
MAX_UPLOAD_SIZE=52428800
REQUEST_TIMEOUT=30000
DATABASE_POOL_SIZE=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket